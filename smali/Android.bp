genrule {
    name: "android-smali_version",
    defaults: ["android-smali_version_defaults"],
    out: ["android-smali.properties"],
}

// build smali jar
// ============================================================

java_binary_host {
    name: "android-smali",

    srcs: [
        "src/main/java/**/*.java",
        ":third_party-smali",
    ],

    manifest: "manifest.txt",

    static_libs: [
        "antlr-runtime",
        "jcommander",
        "smali-dexlib2",
        "android-smali-util",
    ],

    java_resources: [":android-smali_version"],

    wrapper: ":android-smali_script",
}